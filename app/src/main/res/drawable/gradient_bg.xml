<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#8E2DE2"
                android:endColor="#FF6FD8"
                android:type="linear"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>



